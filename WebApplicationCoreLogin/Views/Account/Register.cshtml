@model WebApplicationCoreLogin.Models.ViewModel.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4 offset-4" >
        <h1>@ViewData["Title"]</h1>

    </div>
</div>

<div class="row">

    <div class="col-md-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div> 
            @*ModelOnly: Validation dışındaki hatalar için kullanıyoruz.ÖrnÇşifre yanlış*@
            <div class="form-group mb-3">
                <label asp-for="userName" class="form-label">Username</label>
                <input asp-for="userName" class="form-control" placeholder="username" />
                <span asp-validation-for="userName"></span>


            </div>
            <div class="form-group mb-3">
                <label asp-for="password" class="form-label">Password</label>
                <input asp-for="password" class="form-control" placeholder="password" />
                <span asp-validation-for="password"></span>


            </div> 
            <div class="form-group mb-3">
                <label asp-for="password2" class="form-label">Password(Confirm)</label>
                <input asp-for="password2" class="form-control" placeholder="password" />
                <span asp-validation-for="password2"></span>


            </div>
            <div class="form-group mb-3">

                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-right-to-bracket fa-user me-1"></i>Register</button>



            </div>
        </form>

    </div>
</div>
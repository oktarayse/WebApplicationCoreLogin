@model WebApplicationCoreLogin.Models.ViewModel.UserViewModel
@{
    ViewData["Title"] = "Users";
}

<div class="row">
    <div class="col-md-4 offset-4">
        <h1>@ViewData["Title"]</h1>

    </div>
</div>

<div class="row">

    <div class="col-md-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            @*ModelOnly: Validation dışındaki hatalar için kullanıyoruz.ÖrnÇşifre yanlış*@
            <div class="form-group mb-3">
                <label asp-for="UserName" class="form-label">Username</label>
                <input asp-for="UserName" class="form-control" placeholder="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password"></span>


            </div>
            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <input asp-for="Role" class="form-control" placeholder="Role" />
                <span asp-validation-for="Role"></span>


            </div>
            <div class="form-group mb-3">

                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-right-to-bracket fa-user me-1"></i>Create</button>



            </div>
        </form>

    </div>
</div>
